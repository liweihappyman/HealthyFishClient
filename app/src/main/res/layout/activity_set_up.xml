<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/color_white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/lly_message_notification"
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="54px"
                    android:text="消息通知"
                    style="@style/textSize_60"
                    android:textColor="@color/color_general_and_title" />

                <Switch
                    android:id="@+id/switch_message_notification"
                    android:layout_width="128px"
                    android:layout_height="64px"
                    android:layout_marginRight="53px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/lly_change_password"
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="54px"
                    android:text="修改登录密码"
                    style="@style/textSize_60"
                    android:textColor="@color/color_general_and_title" />

                <ImageView
                    android:id="@+id/iv_change_password"
                    android:layout_width="94px"
                    android:layout_height="97px"
                    android:layout_marginRight="23px"
                    android:padding="30px"
                    android:src="@drawable/ic_more_horizontal"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/lly_update_version"
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="54px"
                    android:text="更新版本"
                    style="@style/textSize_60"
                    android:textColor="@color/color_general_and_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前版本：1.0"
                    style="@style/textSize_48"
                    android:textColor="@color/color_general_and_title"/>

                <ImageView
                    android:id="@+id/iv_update_version"
                    android:layout_width="94px"
                    android:layout_height="97px"
                    android:layout_marginRight="23px"
                    android:padding="30px"
                    android:src="@drawable/ic_more_horizontal"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <Button
                android:id="@+id/bt_login_out"
                android:layout_width="882px"
                android:layout_height="126px"
                android:layout_marginTop="58px"
                android:text="退出登录"
                style="@style/textSize_54"
                android:textColor="@color/selector_text_color_from_white_to_secondary"
                android:background="@drawable/selector_btn_color_from_secondary_to_white"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
