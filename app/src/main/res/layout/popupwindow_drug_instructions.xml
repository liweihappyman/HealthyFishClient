<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700px"
    android:layout_height="match_parent"
    android:background="@color/color_light_gray"
    android:orientation="vertical">
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="700px"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="150px"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingLeft="30px">

        <TextView
            style="@style/textSize_48"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:text="瑞舒伐他汀钙片"
            android:textColor="@color/color_blue_dark" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_divider" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usage"
                style="@style/textSize_48"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="用法"
                android:textColor="@color/color_auxiliary_info" />

            <TextView
                style="@style/textSize_48"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:text="口服" />

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_divider" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize_48"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="次数"
                android:textColor="@color/color_auxiliary_info" />

            <TextView
                android:id="@+id/frequency"
                style="@style/textSize_48"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:text="每天一次" />

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_divider" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize_48"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="剂量"
                android:textColor="@color/color_auxiliary_info" />

            <TextView
                android:id="@+id/dose"
                style="@style/textSize_48"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:text="每天10mg" />

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_divider" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize_48"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="药程"
                android:textColor="@color/color_auxiliary_info" />

            <TextView
                android:id="@+id/time"
                style="@style/textSize_48"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:text="14天" />

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_divider" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize_48"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="开药数"
                android:textColor="@color/color_auxiliary_info" />

            <TextView
                android:id="@+id/drug_number"
                style="@style/textSize_48"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:text="14片" />

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_divider" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <TextView
                style="@style/textSize_48"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="规格"
                android:textColor="@color/color_auxiliary_info" />

            <TextView
                android:id="@+id/Specifications"
                style="@style/textSize_48"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:text="10mg*7" />
        </com.zhy.autolayout.AutoLinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_divider" />
    </com.zhy.autolayout.AutoLinearLayout>
    
    <TextView
        android:id="@+id/close"
        android:layout_width="580px"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:text="关闭"
        android:clickable="true"
        style="@style/textSize_48"
        android:textColor="@color/color_blue"
        android:gravity="center"
        android:background="@drawable/blue_rounded_rectangle"

        /></com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
