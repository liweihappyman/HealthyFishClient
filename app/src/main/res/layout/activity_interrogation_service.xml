<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="95px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_currentService"
                style="@style/textSize_42"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="当前服务"
                android:textColor="@color/color_primary" />

            <TextView
                android:id="@+id/tv_myDoctor"
                style="@style/textSize_42"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的医生"
                android:textColor="@color/color_content_title" />

            <TextView
                android:id="@+id/tv_allService"
                style="@style/textSize_42"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全部服务"
                android:textColor="@color/color_content_title" />

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="360px"
            android:layout_height="10px"
            android:src="@mipmap/ic_slider" />

    </com.zhy.autolayout.AutoLinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_interrogation_service"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</com.zhy.autolayout.AutoLinearLayout>
