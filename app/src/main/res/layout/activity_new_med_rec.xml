<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.healthyfish.healthyfish.ui.activity.medicalrecord.NewMedRec">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_marginBottom="20px"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <com.healthyfish.healthyfish.ui.widget.AutoCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:cardCornerRadius="3px"
                android:elevation="5dp">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView_Lable"
                    android:layout_marginTop="50px"
                    android:text="标签" />

                <TextView
                    android:id="@+id/lable"
                    style="@style/EditText_Hint"
                    android:clickable="true" />

                <ImageView style="@style/Divider" />

                <TextView
                    style="@style/TextView_Lable"
                    android:text="患者信息" />

                <TextView
                    android:id="@+id/name"
                    style="@style/EditText_Hint"
                    android:text="姓名（*必填）" />

                <TextView
                    android:id="@+id/patient_info"
                    style="@style/EditText_Hint"
                    android:clickable="true" />

                <ImageView style="@style/Divider" />

                <TextView
                    style="@style/TextView_Lable"
                    android:text="诊断" />

                <EditText
                    android:id="@+id/diagnosis"
                    style="@style/EditText_Hint"
                    android:hint="（*必填）"/>

                <ImageView style="@style/Divider" />

                <TextView
                    style="@style/TextView_Lable"
                    android:text="病情信息" />

                <EditText
                    android:id="@+id/disease_info"
                    style="@style/EditText_Hint"
                    android:hint="（*必填）"/>

                <ImageView style="@style/Divider" />

                <TextView
                    style="@style/TextView_Lable"
                    android:text="就诊科室"
                    />

                <EditText
                    android:id="@+id/clinical_department"
                    style="@style/EditText_Hint" />

                <ImageView style="@style/Divider" />

                <TextView
                    style="@style/TextView_Lable"
                    android:text="就诊时间" />

                <TextView
                    android:id="@+id/clinical_time"
                    style="@style/EditText_Hint"
                    android:clickable="true" />

                <ImageView
                    style="@style/Divider"
                    android:layout_marginBottom="30px" />
            </com.zhy.autolayout.AutoLinearLayout>
            </com.healthyfish.healthyfish.ui.widget.AutoCardView>

            <TextView
                android:id="@+id/create_course"
                android:layout_width="match_parent"
                android:layout_height="75px"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/new_the_course_of_the_disease"
                android:textColor="@color/colorPrimaryDark" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/course_of_disease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px">
                </android.support.v7.widget.RecyclerView>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>


    </ScrollView>
    <TextView
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:background="@drawable/selector_1dp_btn_color_from_priamry_to_white"
        android:clickable="true"
        android:gravity="center"
        android:text="保存"
        android:textColor="@android:color/white"
        style="@style/textSize_54" />

</com.zhy.autolayout.AutoLinearLayout>
