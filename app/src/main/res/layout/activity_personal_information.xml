<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57px"
        android:layout_marginTop="30px"
        android:text="实名信息"
        android:textColor="@color/color_auxiliary_info"
        android:textSize="42px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:background="@android:color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54px"
            android:background="@null"
            android:hint="姓名  *必填"
            android:paddingBottom="30px"
            android:paddingTop="30px"
            android:textColor="@color/color_general_and_title"
            android:textColorHint="@color/color_hint"
            android:textSize="60px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="54px"
            android:layout_marginRight="54px"
            android:background="@android:color/darker_gray" />

        <EditText
            android:id="@+id/et_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54px"
            android:background="@null"
            android:hint="性别  *必填"
            android:paddingBottom="30px"
            android:paddingTop="30px"
            android:textColor="@color/color_general_and_title"
            android:textColorHint="@color/color_hint"
            android:textSize="60px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="54px"
            android:layout_marginRight="54px"
            android:background="@android:color/darker_gray" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54px"
            android:background="@null"
            android:hint="年龄  *必填"
            android:paddingBottom="30px"
            android:paddingTop="30px"
            android:textColor="@color/color_general_and_title"
            android:textColorHint="@color/color_hint"
            android:textSize="60px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="54px"
            android:layout_marginRight="54px"
            android:background="@android:color/darker_gray" />

        <EditText
            android:id="@+id/et_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54px"
            android:background="@null"
            android:hint="身高"
            android:paddingBottom="30px"
            android:paddingTop="30px"
            android:textColor="@color/color_general_and_title"
            android:textColorHint="@color/color_hint"
            android:textSize="60px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="54px"
            android:layout_marginRight="54px"
            android:background="@android:color/darker_gray" />

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54px"
            android:background="@null"
            android:hint="体重"
            android:paddingBottom="30px"
            android:paddingTop="30px"
            android:textColor="@color/color_general_and_title"
            android:textColorHint="@color/color_hint"
            android:textSize="60px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57px"
        android:layout_marginTop="30px"
        android:text="常用手机号（方便医生联系您）"
        android:textColor="@color/color_auxiliary_info"
        android:textSize="42px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@android:color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54px"
            android:background="@null"
            android:hint="手机号"
            android:paddingBottom="30px"
            android:paddingTop="30px"
            android:textColor="@color/color_general_and_title"
            android:textColorHint="@color/color_hint"
            android:textSize="60px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57px"
        android:layout_marginTop="30px"
        android:text="身份证（用于绑定医保卡）"
        android:textColor="@color/color_auxiliary_info"
        android:textSize="42px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lly_id_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/color_white">

        <EditText
            android:id="@+id/et_idCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="54px"
            android:background="@null"
            android:hint="身份证号"
            android:paddingBottom="30px"
            android:paddingTop="30px"
            android:textColor="@color/color_general_and_title"
            android:textColorHint="@color/color_hint"
            android:textSize="60px" />

        <ImageView
            android:id="@+id/iv_go"
            android:layout_width="94px"
            android:layout_height="97px"
            android:padding="30px"
            android:src="@drawable/ic_more_horizontal"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
